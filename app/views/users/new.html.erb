
<%= form_tag(users_path, method: "post") do %>
  <%= label_tag(:username, "Username:") %>  
  <%= text_field_tag(:ursername) %><br><br>
  <%= label_tag(:email, "Email:") %>  
  <%= email_field(:email, "") %><br><br>
